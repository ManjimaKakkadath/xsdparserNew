<!-- Views/DynamicForm/Index.cshtml -->
@model DynamicFormViewModel

<h2>Dynamic Form</h2>
<form asp-action="SubmitForm" method="post">
    @foreach (var element in Model.FormModel.Elements)
    {
        <div class="form-group">
            <label asp-for="FormData[@element.Name]">@element.Name</label>
            if (element.Type == "boolean")
            {
            <input type="checkbox" asp-for="FormData[@element.Name]" class="form-control" />
            }
            else
            {
            <input type="text" asp-for="FormData[@element.Name]" class="form-control" />
            }
        </div>
    }
    <button type="submit" class="btn btn-primary">Submit</button>
</form>